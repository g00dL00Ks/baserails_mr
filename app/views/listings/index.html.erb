 </div>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
    <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
            <div class="caption">
            <h3><%= listing.name %></h3><br>
        </div>
